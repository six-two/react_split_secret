import React from "react";
import { connect } from 'react-redux';
import { ReduxState } from './redux/store';
import { setSecret } from './redux/actions';


const SecretInput = (props: Props) => {
    const onChange = (event: any) => props.setValue(event.target.value);
    return (
        <div>
            <input type="text" value={props.value} onChange={onChange} />
        </div>
    );
}


interface Props {
    value: string,
    setValue: (newValue: string) => void,
}

// export default FullscreenManager;
const mapStateToProps = (state: ReduxState, ownProps: any) => {
    return {
        ...ownProps,
        value: state.create.secret_value,
        setValue: setSecret
    };
};

const ReduxSecretInput = connect(mapStateToProps)(SecretInput);
export default ReduxSecretInput;
